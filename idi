<script>
// TAB FUNCTION
function openTab(evt, tabName){
  const t=document.getElementsByClassName("tabcontent");
  const b=document.getElementsByClassName("tablink");
  for(let i=0;i<t.length;i++) t[i].style.display="none";
  for(let i=0;i<b.length;i++) b[i].classList.remove("active");
  document.getElementById(tabName).style.display="block";
  evt.currentTarget.classList.add("active");
}

// WELCOME CLOSE
function closeWelcome(){document.getElementById("welcomeBox").classList.add("hide");}

// MODES
function setMode(mode){
  localStorage.setItem("learnHubMode",mode);
  if(mode==="weak"){
    document.getElementById("modesContent").innerHTML="Weak memory mode activated. Redirecting to simplified page.";
    setTimeout(()=>{window.location.href='weak_memory.html';},500);
  }else{
    document.getElementById("modesContent").innerHTML="Strong memory mode: Full LearnHub content remains active.";
  }
}

// DAY CALCULATOR
function updateDayCalc(){
  const now=new Date();
  const tz=Intl.DateTimeFormat().resolvedOptions().timeZone;
  const today=new Date().toLocaleDateString(undefined,{weekday:'long',year:'numeric',month:'long',day:'numeric',timeZone:tz});
  document.getElementById("todayDate").innerText="Today: "+today;
  let lastVisit=localStorage.getItem("learnHubLastVisitUTC");
  let dayCount=parseInt(localStorage.getItem("learnHubDay")||"1");
  const nowUTC=Date.now();
  if(lastVisit){
    const diff=Math.floor((nowUTC-lastVisit)/(1000*60*60*24));
    if(diff>1){alert("You skipped a day! Tracker reset.");dayCount=1;}
    if(diff>0) dayCount+=1;
  }
  localStorage.setItem("learnHubDay",dayCount);
  localStorage.setItem("learnHubLastVisitUTC",nowUTC);
  let content="<ul>";
  for(let i=1;i<=dayCount;i++){
    content+="<li>Day "+i+": ";
    switch(i%7){
      case 1: content+="HTML basics"; break;
      case 2: content+="CSS basics"; break;
      case 3: content+="JavaScript basics"; break;
      case 4: content+="Python basics"; break;
      case 5: content+="Simple Game Dev intro"; break;
      case 6: content+="Responsive Web Design"; break;
      case 0: content+="Devices & OS basics"; break;
    }
    content+="</li>";
  }
  content+="</ul>";
  document.getElementById("dayCalcContent").innerHTML=content;
}
function resetDay(){
  if(confirm("Restart your tracker?")){localStorage.removeItem("learnHubDay");localStorage.removeItem("learnHubLastVisitUTC");updateDayCalc();}
}

// OWNER PANEL FIXED
let ownerVerified = localStorage.getItem("ownerVerified") === "true";

function openOwnerPanel() {
  if(ownerVerified){toggleOwnerPanel(); return;}
  const email = prompt("Enter your owner email:");
  const pass = prompt("Enter your owner password:");
  if(email === "deathway1201@gmail.com" && pass === "IloveYes"){
    ownerVerified = true;
    localStorage.setItem("ownerVerified","true");
    document.getElementById("ownerPanel").style.display = "block";
    alert("Owner access granted!");
  } else { alert("Access Denied!"); }
}

function toggleOwnerPanel(){
  const panel = document.getElementById("ownerPanel");
  panel.style.display = (panel.style.display==="block") ? "none":"block";
}

// Optional close button inside owner panel
document.getElementById("ownerPanel")?.insertAdjacentHTML('beforeend','<button onclick="toggleOwnerPanel()" style="margin-top:10px;">Close Panel</button>');

function resetAllData(){if(confirm("Reset all LearnHub progress?")){localStorage.clear();alert("All user data reset!");location.reload();}}
function giveBonus(){let day=parseInt(localStorage.getItem("learnHubDay")||"1");day+=1;localStorage.setItem("learnHubDay",day);alert("Bonus day added!");updateDayCalc();}

// CREDITS AUTO-HIDE
setTimeout(()=>{document.getElementById("credits").classList.add("hide");},5000);

// INTRO SWORD ANIMATION
window.addEventListener('load', () => {
  const sword = document.getElementById("sword");
  const fire = document.getElementById("fire");

  // Sword drop animation
  sword.addEventListener('animationend', () => {
    // Fire pop effect
    fire.style.animation = "firePop 0.7s forwards";

    // After animation, hide intro and show main content
    setTimeout(() => {
      document.getElementById("introScreen").style.display = "none";
      document.getElementById("mainContent").style.display = "block";
      updateDayCalc();
    }, 800);
  });

  // 20-minute usage warning
  setTimeout(() => {
    alert("‚ö† You have spent 20 minutes on LearnHub! Take a break or restart the tracker.");
    location.reload();
  }, 20 * 60 * 1000);
});
</script>
